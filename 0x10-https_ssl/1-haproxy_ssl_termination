global
  log /dev/log    local0
  log /dev/log	local1 notice
  chroot /var/lib/haproxy
  stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
  stats timeout 30s
  user haproxy
  group haproxy
  daemon
  
  # Default SSL material locations
  ca-base /etc/ssl/certs
  crt-base /etc/ssl/private

  # Reference: https://ssl-config.mozilla.org/#server=haproxy&server-version=2.0.3&config=intermediate 
  ssl-default-bind-ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384
    ssl-default-bind-ciphersuites TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256
    ssl-default-bind-options prefer-client-ciphers no-sslv3 no-tlsv10 no-tlsv11 no-tls-tickets

defaults
  log     global
  mode    http
  option  httplog
  timeout client 15s
  timeout connect 10s
  timeout server 15s
  timeout http-request 10s

frontend captressketh-tech-backend
    bind *:80
    bind *:443 ssl crt /etc/haproxy/certs/www.captressketh.tech.pem
    http-request redirect scheme https unless { ssl_fc }
    http-request set-header X-Forwarded-Proto https
    default_backend captressketh-tech-backend

backend captressketh-tech-backend
    balance roundrobin
    server 467595-web-01 18.235.248.159 check
    server 467595-web-02 100.25.117.185 check
